@model Abc.Northwind.MvcWebUI.Models.CartListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<h2>Your Cart</h2>
<table class="table">
    <tr>
        <td>Product Name</td>
        <td>Unit Price</td>
        <td>Units In Stock</td>
        <td></td>
        <td>Quantity</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model.Cart.CartLines)
    {
<tr>
    <td>@item.Product.ProductName</td>
    <td>@item.Product.UnitPrice</td>
    <td>@item.Product.UnitsInStock</td>
    <td style="position: relative; right: -110px;">
        <a class="btn btn-danger" asp-controller="Cart" asp-action="QuantityDecrease" asp-route-productId="@item.Product.ProductId">+</a>
    </td>

    <td>@item.Quantity</td>
    <td style="position: relative; left: -110px;">
        <a class="btn btn-success" asp-controller="Cart" asp-action="QuantityIncrease" asp-route-productId="@item.Product.ProductId">+</a>
        
    </td>
    <td class="text-right"><a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.ProductId">remove from cart</a></td>
</tr>
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <h3>Total</h3>
        </td>
        <td class="text-right">
            <h3>
                <strong>@Model.Cart.Total</strong>
            </h3>
        </td>
    </tr>
    <tr>
        <td> </td>
        <td> </td>
        <td> </td>
        <td>
            <a asp-controller="Product" asp-action="Index" class="btn btn-xs  btn-default">
                <span ></span> Continue Shopping
            </a>
        </td>
        <td class="text-right">
            <a asp-controller="Cart" asp-action="Complete" class="btn btn-xs btn-success">
                 Go To Checkout
            </a>
        </td>
    </tr>
</table>
